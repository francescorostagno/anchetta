{% extends 'layout.twig' %}

{% block body %}
  <div class="container">
    <div class="top-container jumbotron p-1 p-md-5 text-white rounded">
      <div class="col d-flex justify-content-center">
        <h1 class="display-4 font-weight-bold">{{title}}</h1>
      </div>
        <div class="col d-flex justify-content-center" style="margin: 5px">
            <h2>{{ constants.TITLE_TEXT_1 }}</h2>
        </div>
      <div class="col d-flex justify-content-center">
        <img class="card-img-right flex-auto d-none d-lg-block" style="border-radius: 5px" src="/images/center.jpg">
      </div>
      <div class="col d-flex justify-content-left" style="margin-top:10px; ">
        <p class="lead">{{ constants.TITLE_TEXT_2 }}</p>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-md-6">
        <div class="card  ">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-2 text-primary ">{{ constants.RESERVATIONS }}</h3>
            <span>{{ constants.RESERVATIONS_TEXT }}</span>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="https://centrosportivoanchetta.wansport.com">{{ constants.RESERVATION_TENNIS }}</a>
              </li>
              <li class="nav-item">
                <span class="nav-link">{{ constants.RESERVATION_FOOTBALL }} -- {{ constants.TELEPHONE }}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body d-flex flex-column align-items-start">

            <h3 class="mb-2 text-primary "> {{ constants.EVENTS_TITLE }}</h3>
            <p class="card-text">{{ constants.EVENTS }}</p>
            <div class="row">
              <div class="col-lg">
                <a href="#" class="fa fa-facebook"></a>
              </div>
              <div class="col-lg">
                <a href="#" class="fa fa-instagram"></a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-md-6">
        <div class="card  ">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-2 text-primary ">{{ constants.NEWSLETTER_TITLE }}</h3>
          </div>
          <div class="col-md-10">
            <p class="card-text mb-lg-2">{{ constants.NEWSLETTER }}</p>
          </div>

          <form action="" method="post">
            <div class="col-md-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
                <input type="text" class="form-control" name="email" id="email"  placeholder="Enter your Email"/>
              </div>
            </div>
            <br><br>
            <div class="col-md-10" style="margin-bottom: 10px">
              <button class="btn btn-primary btn-lg">{{ constants.SUBSCRIBE }}</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-2 text-primary ">{{ constants.SUMMER_CAMP_TEXT }}</h3>
            <div class="card" style="width: 18rem;">
              <img src="/images/centriestivi.jpeg" class="card-img-top" alt="...">
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
{% endblock %}
